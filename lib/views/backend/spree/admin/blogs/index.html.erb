<% content_for :tabs do %>
  <nav>
    <ul class="tabs" data-hook="admin_settings_blogs_tabs">
      <% if can?(:show, Spree::Blog) %>
        <%= settings_tab_item plural_resource_name(Spree::Blog), spree.admin_blogs_path %>
      <% end %>
    </ul>
  </nav>
<% end %>

<% admin_breadcrumb(t('spree.contents')) %>
<% admin_breadcrumb(plural_resource_name(Spree::Blog)) %>

<% content_for :page_actions do %>
  <% if can?(:create, Spree::Blog) %>
    <li>
      <%= link_to t('spree.new_blog'), new_object_url, id: 'admin_new_blogs_link', class: 'btn btn-primary' %>
    </li>
  <% end %>
<% end %>

<% if @blogs.any? %>
  <table class="index sortable" id="listing_blogs" data-hook data-sortable-link="<%= update_positions_admin_blogs_url %>">
    <colgroup>
      <col style="width: 5%">
      <col style="width: 15%">
      <col style="width: 30%">
      <col style="width: 20%">
      <col style="width: 20%">
      <col style="width: 5%">
      <col style="width: 5%">
    </colgroup>
    <thead>
      <tr data-hook="admin_blogs_index_headers">
        <th></th>
        <th><%= Spree::Blog.human_attribute_name(:status) %></th>
        <th><%= Spree::Blog.human_attribute_name(:title) %></th>
        <th><%= Spree::Blog.human_attribute_name(:author) %></th>
        <th><%= Spree::Blog.human_attribute_name(:publishing_date) %></th>
        <th data-hook="admin_blogs_index_header_actions" class="actions"></th>
      </tr>
    </thead>
    <tbody>
      <% @blogs.each do |method| %>
        <tr id="<%= spree_dom_id method %>" data-hook="admin_blogs_index_rows">
          <td><span class="handle"></span></td>
          <td><%= t("spree.statuses.#{method.status}") %></td>
          <td><%= method.title %></td>
          <td><%= method.author %></td>
          <td><%= method.publishing_date %></td>
          <td data-hook="admin_blogs_index_row_actions" class="actions">
            <% if can?(:update, method.becomes(Spree::Blog)) %>
              <%= link_to_edit method.becomes(Spree::Blog), no_text: true %>
            <% end %>
            <% if can?(:destroy, method.becomes(Spree::Blog)) %>
              <%= link_to_delete method.becomes(Spree::Blog), no_text: true %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-objects-found">
    <%= render 'spree/admin/shared/no_objects_found',
                 resource: Spree::Blog,
                 new_resource_url: new_object_url %>
  </div>
<% end %>
